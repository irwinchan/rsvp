<%= render partial: "/shared/errors", locals: {object: @restaurant} %>
<%= link_to "Back to Restaurants", restaurants_url %>

<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :capacity %>
  <%= f.number_field :capacity %>

  <%= f.label :province %>
  <%= f.text_field :province %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :street, %>
  <%= f.text_field :street %>

  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>

  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %>

  <%= f.submit %>
<% end %>


