<h3><%= @user.name %>'s reservations</h3>
<h4>Reservation information:</h4>
<% @user.reservations.each do |res| %>
  <ul class="list-unstyled">
    <li>Reservation ID: <%= res.id %></li>
    <li>Date/Time: <%= res.date_time %></li>
    <li>Location: <%= res.restaurant.name %></li>
    <li>Party size: <%= res.party_size %></li>
  </ul>
  <ul class="list-unstyled list-inline">
    <li><%= link_to "Delete", restaurant_reservation_path(res.restaurant.id, res.id), method: :delete, data: {confirm: "Are you sure you want to delete this reservation?"} %>
    </li>
    <li>
      <%= link_to "Edit", edit_restaurant_reservation_path(res.restaurant.id, res.id) %>
    </li>
	</ul>
<% end %>
